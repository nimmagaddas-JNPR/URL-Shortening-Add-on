{

  "manifest_version": 2,
  "name": "url Shortening",
  "version": "1.0",

  "description": "Shorten the given url",
  "icons": {
    "48": "icons/links.png"
  },

  "permissions": [
    "activeTab",
    "webRequest"
  ],

  "browser_action": {
    "default_icon": "icons/links.png",
    "default_title": "Mini URL",
    "default_popup": "popup/main.html"
  },

"background": {
    "scripts": ["shorten.js"]
  },

  "applications": {
  "gecko": {
    "id": "miniurl@mozilla.org"
  }
}

}